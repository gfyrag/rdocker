#!/bin/bash

# Define some vars
export RDOCKER_HOME=${RDOCKER_HOME:-$HOME/.rdocker}
export RDOCKER_REMOTES=${RDOCKER_REMOTES:-$RDOCKER_HOME/remotes}
export RDOCKER_USESUDO=${RDOCKER_USESUDO:-"yes"}
export RDOCKER_DEFAULT_COMMAND_LB="DefaultCommand"
export RDOCKER_PORT_LB="Port"
export RDOCKER_HOST_LB="Host"
export RDOCKER_REMOTE_LB="Remote"
export RDOCKER_TLS_LB="TLS"
export RDOCKER_TLSCACERT_LB="TLSCACert"
export RDOCKER_TLSCERT_LB="TLSCert"
export RDOCKER_TLSVERIFY_LB="TLSVerify"
export RDOCKER_TLSKEY_LB="TLSKey"

